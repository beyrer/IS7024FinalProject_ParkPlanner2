@page
@model ParkPlanner2.Pages.ContactUsModel
@{

}
<section class="mb-4">
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact Our Team</h2>
    <h3 class="h1-responsive font-weight-bold text-center my-4">We look forward to hearing from you!</h3>
        <div class="album py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="https://media.licdn.com/dms/image/C4D03AQH4lnGckEqpOg/profile-displayphoto-shrink_800_800/0/1602529608495?e=1706745600&v=beta&t=EJDAGotTkQ42n_5r5u2o0IuhuD7bBXZCrVYAl03j6Ww" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">Hi, I am Jameson Zink!</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="https://media.licdn.com/dms/image/C5603AQFhf5K9jRFHqA/profile-displayphoto-shrink_800_800/0/1516455264790?e=1701302400&v=beta&t=4VA1OzhCtxIaQfQUN1Oqi1VVUrG-eGH1vcsZvN0NPBY" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">Hi, I am Jessie Beyrer!</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="https://media.licdn.com/dms/image/D4D03AQET7VBbnzcerA/profile-displayphoto-shrink_800_800/0/1630020384626?e=1701302400&v=beta&t=s109N8iZ79OpLQQmSJZCWuj84jvy0NO0Q0YpucpVFHg" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">Hi, I am Neil Bechmann!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    <div class="row">
        <div class="">
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" name="name" class="form-control" placeholder="Your Name *" for="name" required data-validation-required-message="Please enter your name.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="email" name="email" class="form-control" placeholder="Your Email *" for="email" required data-validation-required-message="Please enter your email address.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input type="tel" name="subject" class="form-control" placeholder="Your Subject *" for="subject" required data-validation-required-message="Please enter your subject line.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form">
                            <textarea class="form-control" name="message" placeholder="Your Message *" for="message" required data-validation-required-message="Please enter a message."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                </div>
                <div class="text-center text-md-center">
                    <input type="submit" class="btn btn-secondary btn-lg" value="Send">
                </div>
            </form>
            @if (Model.isSent == "sent")
            {
                <p>Thank you for contacting us!</p>
            }
            @if (Model.isSent == "failed")
            {
                <p>The email failed to send, please try again at a future time.</p>
            }
        </div>
    </div>
</section>

